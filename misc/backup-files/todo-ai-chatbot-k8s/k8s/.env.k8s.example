# ==============================================
# Todo AI Chatbot - Kubernetes Environment
# ==============================================

# ------------------
# Kubernetes Configuration
# ------------------
K8S_NAMESPACE=todo-chatbot
K8S_CONTEXT=minikube

# ------------------
# Image Registry Configuration
# ------------------
IMAGE_REGISTRY=docker.io
IMAGE_PULL_POLICY=IfNotPresent

# ------------------
# Image Versions
# ------------------
FRONTEND_IMAGE_VERSION=latest
BACKEND_IMAGE_VERSION=latest
MCP_SERVER_IMAGE_VERSION=latest

# ------------------
# Resource Limits and Requests
# ------------------
# Backend
BACKEND_CPU_REQUEST=100m
BACKEND_CPU_LIMIT=500m
BACKEND_MEMORY_REQUEST=128Mi
BACKEND_MEMORY_LIMIT=512Mi

# Frontend
FRONTEND_CPU_REQUEST=100m
FRONTEND_CPU_LIMIT=300m
FRONTEND_MEMORY_REQUEST=64Mi
FRONTEND_MEMORY_LIMIT=256Mi

# MCP Server
MCP_SERVER_CPU_REQUEST=50m
MCP_SERVER_CPU_LIMIT=200m
MCP_SERVER_MEMORY_REQUEST=64Mi
MCP_SERVER_MEMORY_LIMIT=128Mi

# ------------------
# Replicas Configuration
# ------------------
BACKEND_REPLICAS=2
FRONTEND_REPLICAS=2
MCP_SERVER_REPLICAS=2

# ------------------
# Service Configuration
# ------------------
BACKEND_SERVICE_TYPE=ClusterIP
FRONTEND_SERVICE_TYPE=ClusterIP
MCP_SERVER_SERVICE_TYPE=ClusterIP

# ------------------
# Ingress Configuration
# ------------------
INGRESS_HOST=todo-chatbot.local
INGRESS_TLS_ENABLED=false

# ------------------
# Database Configuration for Kubernetes
# ------------------
POSTGRES_DB=todo_db
POSTGRES_USER=todo_user
POSTGRES_PASSWORD=todo_password
POSTGRES_HOST=postgres-service
POSTGRES_PORT=5432

# ------------------
# Application Environment Variables for Kubernetes
# ------------------
DATABASE_URL=postgresql://todo_user:todo_password@postgres-service:5432/todo_db
OPENAI_API_KEY=sk-proj-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
OPENAI_ORG_ID=org-xxxxxxxxxxxxxxxx
OPENAI_MODEL=gpt-4o-mini
BETTER_AUTH_SECRET=your_secret_key_minimum_32_characters_long
BETTER_AUTH_URL=http://frontend-service:3000