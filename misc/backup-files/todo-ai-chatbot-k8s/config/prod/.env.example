# ==============================================
# Todo AI Chatbot - Production Environment
# ==============================================

# ------------------
# Application Config
# ------------------
APP_NAME=todo-ai-chatbot
APP_ENV=production
APP_DEBUG=false
APP_PORT=3000

# ------------------
# Database (Neon PostgreSQL)
# ------------------
# Get from: https://neon.tech
DATABASE_URL=postgresql://user:password@ep-production.us-east-2.aws.neon.tech/neondb?sslmode=require
DB_HOST=ep-production.us-east-2.aws.neon.tech
DB_PORT=5432
DB_NAME=neondb
DB_USER=your_production_user
DB_PASSWORD=your_production_password
DB_SSL_MODE=require

# ------------------
# OpenAI API
# ------------------
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
OPENAI_ORG_ID=org-xxxxxxxxxxxxxxxx
OPENAI_MODEL=gpt-4o
OPENAI_ASSISTANT_ID=asst_production_assistant_id

# OpenAI ChatKit Domain Key
# Get from: OpenAI Platform when enabling ChatKit
OPENAI_DOMAIN_KEY=your_production_domain_key

# ------------------
# Better Auth
# ------------------
# Generate with: openssl rand -hex 32
BETTER_AUTH_SECRET=your_production_secret_key_minimum_32_characters_long
BETTER_AUTH_URL=https://your-production-domain.com

# ------------------
# Backend API
# ------------------
BACKEND_URL=https://api.your-production-domain.com
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000
BACKEND_WORKERS=8
BACKEND_RELOAD=false

# ------------------
# MCP Server
# ------------------
MCP_SERVER_URL=https://mcp.your-production-domain.com
MCP_SERVER_HOST=0.0.0.0
MCP_SERVER_PORT=3000

# ------------------
# Frontend
# ------------------
NEXT_PUBLIC_API_URL=https://api.your-production-domain.com
NEXT_PUBLIC_APP_URL=https://your-production-domain.com
NEXT_PUBLIC_ENABLE_VOICE=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_RECURRING=true

# ------------------
# Feature Flags
# ------------------
ENABLE_VOICE_INPUT=true
ENABLE_VOICE_OUTPUT=true
ENABLE_ANALYTICS=true
ENABLE_RECURRING_TASKS=true
ENABLE_DEBUG_LOGGING=false

# ------------------
# CORS
# ------------------
CORS_ORIGINS=https://your-production-domain.com,https://api.your-production-domain.com
CORS_ALLOW_CREDENTIALS=true

# ------------------
# Logging
# ------------------
LOG_LEVEL=INFO
LOG_FORMAT=json

# ------------------
# Production Security
# ------------------
SECURE_COOKIES=true
HTTPS_REDIRECT=true
RATE_LIMIT_ENABLED=true
MAX_REQUESTS_PER_MINUTE=100