# ==============================================
# Todo AI Chatbot - Docker Compose Environment
# ==============================================

# ------------------
# Image Tags
# ------------------
FRONTEND_IMAGE=todo-frontend:latest
BACKEND_IMAGE=todo-backend:latest
MCP_SERVER_IMAGE=todo-mcp-server:latest

# ------------------
# Docker Compose Services
# ------------------
COMPOSE_PROJECT_NAME=todo-ai-chatbot

# ------------------
# Service Ports
# ------------------
FRONTEND_PORT=3000
BACKEND_PORT=8000
MCP_SERVER_PORT=3000

# ------------------
# Database Configuration for Docker
# ------------------
POSTGRES_DB=todo_db
POSTGRES_USER=todo_user
POSTGRES_PASSWORD=todo_password
POSTGRES_HOST=localhost
POSTGRES_PORT=5432

# ------------------
# Application Environment Variables
# ------------------
DATABASE_URL=postgresql://todo_user:todo_password@localhost:5432/todo_db
OPENAI_API_KEY=sk-proj-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
OPENAI_ORG_ID=org-xxxxxxxxxxxxxxxx
OPENAI_MODEL=gpt-4o-mini
BETTER_AUTH_SECRET=your_secret_key_minimum_32_characters_long
BETTER_AUTH_URL=http://localhost:3000